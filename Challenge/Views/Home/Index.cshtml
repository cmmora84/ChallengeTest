@model List<Challenge.Models.Empleado>

@{
	ViewBag.Title = "Challenge Test";
}
<h2>@ViewBag.Title.</h2>
<div class="row">
	<form method="get" action=@Url.Action("Index", "" )>
		<div class="form-group">
			@Html.TextBox("buscar", null, new { placeholder = "Id del Empleado", @class = "form-control", autocomplete = "off" })
		</div>
		<button class="btn btn-default" type="submit">Buscar</button>
	</form>
</div>

<hr/>

<table class="table">
	<thead>
		<tr>
			<th>Id Employee</th>
			<th>Name</th>
			<th>Role</th>
			<th>Contract Type</th>
			<th>Anual Salary</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var empleado in Model)
		{
			<tr>
				<td>@empleado.id</td>
				<td>@empleado.name </td>
				<td>@empleado.roleName </td>
				<td>@empleado.contractTypeName </td>
				<td>@empleado.annualSalary.ToString() </td>
			</tr>

		}
	</tbody>

</table>
